# Allow access from all IPs for mobile development
<RequireAll>
    Require all granted
</RequireAll>

# Enable URL rewriting
RewriteEngine On

# Handle /api/auth0/sync-user requests (for Auth0 action)
RewriteRule ^api/auth0/sync-user$ api/auth0/sync-user.php [L,QSA]

# Handle other API routes - route everything to index.php
RewriteRule ^(.*)$ index.php [L,QSA]
