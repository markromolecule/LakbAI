# Prevent direct access to license files
# License files should only be accessed through the API endpoints

# Deny all direct access
Order Deny,Allow
Deny from all

# Allow access only from the API
<Files "*">
    Order Deny,Allow
    Deny from all
</Files>

# Security headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
</IfModule>
